<!DOCTYPE html>
<html>
<head>
    <title>Tabela de Dados</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Simples com LocalStorage</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@700&family=Roboto:wght@100;300;400;500;700;900&display=swap');

        body {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            margin: 0;
            padding: 0;
            background-image: linear-gradient(45deg, rgb(66, 66, 255),rgb(255, 102, 247), purple);
            animation: backgorundTransition 8s ease-in-out infinite; 
        }

        main{
            height: 100vh;
            width: 97vw;
            background-image: linear-gradient(45deg, rgb(66, 66, 255),rgb(255, 102, 247), purple);
            animation: backgorundTransition 8s ease-in-out infinite; 
            position: relative;
        }

        .tarefasConcluidas {
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        table {
            background: white;
            margin-top: 50px;
            width: 95%;
            border-collapse: collapse;
            margin-left: 30px;
            border-radius: 10px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .button-div {
            align-items: flex-end;
            justify-content: end;
            text-align: end;
            margin-right: 50px;
        }

        .btn-redirecionar {
            border-radius: 5px;
            border-style: inherit;
            border-color: aliceblue;
            color: black;
            background-color: white;
            box-shadow: 2em black;
            font-size: 20px;
            align-items: flex-end;
            justify-content: end;
            margin-left: 20px;
            width: 20%;
            height: 40%;
            text-align: center;
        }

        .btn-redirecionar:hover {
            transform: scale(1.1);
            transition: transform 0.3s ease-in-out;
        }

    </style>
</head>
<body>
    <main class="main">
        <h1 class="tarefasConcluidas">Tarefas concluídas</h1>
        <div class="button-div">
            <button id="redirecionar" class='btn-redirecionar'>Adicionar tarefas</button>
        </div>
        <table id="data-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Grau</th>
                    <th>Situação</th>
                    <th>Data</th>
                    <th>Descrição</th>
                </tr>
            </thead>
            <tbody class="tabela-dinamica">
                <!-- Os dados serão preenchidos dinamicamente aqui -->
            </tbody>
        </table>
    </main>

    <script>
        document.getElementById('redirecionar').addEventListener('click', function() {
            window.location.href = '/insert';
        });
        // Função para preencher os dados da tabela
        function populateTable() {
            const tableBody = document.querySelector('#data-table tbody');
            const users = JSON.parse(localStorage.getItem('usersDelete'));

            tableBody.innerHTML = '';

            users.forEach(user => {
                const row = document.createElement('tr');

                const nameCell = document.createElement('td');
                nameCell.textContent = user.name;
                row.appendChild(nameCell);

                const grauCell = document.createElement('td');
                grauCell.textContent = user.grau;
                row.appendChild(grauCell);

                const situacaoCell = document.createElement('td');
                situacaoCell.textContent = user.situacao;
                row.appendChild(situacaoCell);

                const dateCell = document.createElement('td');
                dateCell.textContent = user.date;
                row.appendChild(dateCell);

                const descricaoCell = document.createElement('td');
                descricaoCell.textContent = user.descricao;
                row.appendChild(descricaoCell);

                tableBody.appendChild(row);
            });
        }

        populateTable();
    </script>
</body>
</html>